// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)

    
    // Choose the order of the modules

    "modules-left": [
        "custom/Arch-Logo",
        "hyprland/workspaces",
        "clock",
        "custom/playerctrl",
        "custom/playerlabel",
    ],

    "modules-center": [
        "clock"
    ],

    "modules-right": [
        "pulseaudio",
        // "backlight",
        "cpu",
        "network",
        "memory",
        // "hyprland/language",
        "tray",
        "custom/lock",
        "custom/power"
    ],

    // Modules configuration
    "clock": {
        "timezone": "Europe/Oslo",
        "format": "{:%A %d. %B %H:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },

    "custom/playerctrl": {
        "format": "{icon}",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}} - {{artist}}\", \"tooltip\": \"{{playerName}}: {{markup_escape(title)}}\",\"alt\":\"{{status}}\"}' -F",
        "on-click": "~/.local/scripts/playerctl_menu",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'> Playing</span>",
            "Paused": "<span foreground='#928374'> Paused</span>"
        },
    },

    "custom/playerlabel": {
        "format": "<span>{}</span>",
        "return-type": "json",
        "max-length": 48,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}} - {{artist}}\", \"tooltip\": \"{{playerName}}: {{markup_escape(title)}}\"}' -F",
        // "on-click-middle": "playerctl play-pause",
        // "on-click": "playerctl previous",
        // "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>  </span>",
            "Paused": "<span foreground='#928374'>  </span>"
        }
    },

    "hyprland/workspaces": {
        "on-click": "activate",
        "disable-scroll": "true",
        "persistent-workspaces": {
            "*": [1,2,3,4,5],
        },
        "format": "{icon}",
        "format-icons": {
            "1": "󰈹",
            "2": "",
            "3": "",
            "4": "",
            "5": "",
        },
    },

    "tray": {
        "spacing": 10,
    },

    "cpu": {
        "interval": 1,
        "format": "  {icon0}{icon1}{icon2}{icon3} {usage:>2}%",
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"]
    },

    "memory": {
        "interval": 30,
        "format": " {used:0.1f}G/{total:0.1f}G"
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["", "", "", "", ""]
    },

    "network": {
        "format-wifi": "({signalStrength}%) ",
        "format-ethernet": "",
        "tooltip-format": "{ifname} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "Disconnected ⚠",
        "on-click": "nm-connection-editor",
    },

    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-icons": {
            "headphone": "",
            "headset": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },

    "custom/power": {
        "format" : "⏻",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "systemctl poweroff",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    },

    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-no": "NO",
    },

    "custom/lock": {
        "tooltip": false,
        "on-click": "sh -c 'hyprlock' & disown",
        "format": "",
    },

    "custom/Arch-Logo": {
        "format": "󰣇",
    },
}

