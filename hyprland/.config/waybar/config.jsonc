// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "top",
    "height": 30, // Waybar height (to be removed for auto height)
    "spacing": 4, // Gaps between modules (4px)

    
    // Choose the order of the modules

    "modules-left": [
        "custom/Arch-Logo",
        "clock",
        "custom/playerctrl",
        "custom/playerlabel",
    ],

    "modules-center": [
        "hyprland/workspaces"
    ],

    "modules-right": [
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "backlight",
        "hyprland/language",
        "tray",
        "custom/power"
    ],

    // Modules configuration
    "clock": {
        "timezone": "Europe/Oslo",
        "format": "{:%A %d. %B %H:%M}",
        "format-alt": "{:%Y-%m-%d}"
    },

    "custom/playerctrl": {
        "format": "{icon}",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}} - {{artist}}\", \"tooltip\": \"{{playerName}}: {{markup_escape(title)}}\",\"alt\":\"{{status}}\"}' -F",
        "on-click": "~/.local/scripts/playerctl_menu",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'>Ó¨¨ Playing</span>",
            "Paused": "<span foreground='#928374'>Ó´ë Paused</span>"
        },
    },

    "custom/playerlabel": {
        "format": "<span>{}</span>",
        "return-type": "json",
        "max-length": 48,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{markup_escape(title)}} - {{artist}}\", \"tooltip\": \"{{playerName}}: {{markup_escape(title)}}\"}' -F",
        // "on-click-middle": "playerctl play-pause",
        // "on-click": "playerctl previous",
        // "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#E5B9C6'> Ó¨¨ </span>",
            "Paused": "<span foreground='#928374'> Ó´ë </span>"
        }
    },

    "hyprland/workspaces": {
        "on-click": "activate",
        "disable-scroll": "true",
        "persistent-workspaces": {
            "*": [1,2,3,4,5],
        },
        "format": "{icon}",
        "format-icons": {
            "1": "Û∞àπ",
            "2": "ÔÑ†",
            "3": "ÔÑ°",
            "4": "ÔÜº",
            "5": "ÔÅµ",
        },
    },

    "tray": {
        // "icon-size": 21,
        "spacing": 10,
    },

    "cpu": {
        "interval": 10,
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },

    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },

    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"]
    },

    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },

    "network": {
        "format-wifi": "({signalStrength}%) Ôá´",
        "format-ethernet": "Óºâ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
    },

    "pulseaudio": {
        "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "Ôñê",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },

    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "custom/power": {
        "format" : "‚èª ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		}
    },

    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-no": "NO",
    },

    "custom/Arch-Logo": {
        "format": "Û∞£á",
    },
}

